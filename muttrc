# too many ugly headers
ignore *
unignore From: To: Cc: Subject: Date: X-BeenThere:

# fix my from
set realname="Phil O. Despotos"
set from="philodespotos@gmail.com"
set use_from=yes
set envelope_from=yes
set edit_headers=yes

# misc
set editor=vim
set arrow_cursor=yes
set sort=threads
set nostrict_threads

# i don't like ~/Mail
# for getmail+Maildir:
set folder=~/.mail
set mbox=+mbox
set spoolfile=+inbox
set record=+sent
set postponed=+drafts
set mbox_type=Maildir

# use the gmailout script to send mail
set sendmail="~/bin/gmailout"

# use the index in the pager
set pager_index_lines=9

# mark all read
macro index \Cr "<tag-pattern>~N\n<tag-prefix><clear-flag>N" "Mark all new messages as read"

source ~/.mutt/aliases
source ~/.mutt/subscriptions
source ~/.mutt/mboxes
source ~/.mutt/colors
