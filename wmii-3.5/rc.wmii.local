# In BSD, you'll have to mount fdescfs for this file to be
# sourced properly.

MODKEY2=Mod4
WMII_FONT='-windows-proggytiny-*-r-*-*-*-*-*-*-*-*-*-*'
WMII_NORMCOLORS=('#000000' '#f8f8f4' '#f8f8f4')
WMII_FOCUSCOLORS=('#000000' '#e6feff' '#585051')
WMII_BACKGROUND='#f8f8f4'
WMII_TERM=(urxvtc)

# Overrides
wmiir write /tagrules <<!
/XMMS.*/ -> ~
/MPlayer.*/ -> ~
/Firefox.*/ -> www
/Gimp.*/ -> ~
/Gimp.*/ -> gimp
/.*/ -> !
/.*/ -> 1
!

. $home/.wmii-3.5/pd.rc
. $home/.wmii-3.5/mpc.rc
Action mp3 &
