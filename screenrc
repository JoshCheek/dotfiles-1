startup_message off
shell -bash
shelltitle sh
defutf8 on

# first line:  hardstatus in xterm title
# second line: 256 colors
termcapinfo xterm*|rxvt* 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
termcapinfo xterm-color*|rxvt* Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm

# i want my programs to be able to use hardstatus, so screen uses the caption
hardstatus off
caption always "%{= Kw}%c %H: %w"
